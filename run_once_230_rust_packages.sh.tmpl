#!/bin/bash -e

if [[ -n "${DRY_RUN}" && "${DRY_RUN}" == true ]]; then
  echo "SKIP_PACKAGES_RUST: $DRY_RUN"
  exit 0
fi

# install Rust global packages
~/.cargo/bin/cargo install \
  eza \
  fd-find \
  ripgrep

{{ if eq .chezmoi.os "darwin" -}}

# install Rust mac packages
~/.cargo/bin/cargo install \
  petname \
  dotenv-linter \
  xsv \
  hexyl \
  sd \
  bat

{{ end -}}
